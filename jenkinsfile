pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    sh 'g++ -o YOUR_SRN-1 hello.cpp' // Compile C++ file
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh './YOUR_SRN-1'  // Run the compiled program
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying the application...'
                    // Add any deployment commands if required
                }
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed'
        }
    }
}

